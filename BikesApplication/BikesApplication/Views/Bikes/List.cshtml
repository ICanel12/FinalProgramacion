@model IEnumerable<BikesApplicationModel.Bike>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<div class="card-header" style="text-align: end;">
    <button type="button" class="btn btn-success">
        <a asp-action="Create" style="color: white">Agregar</a>
    </button>
</div>


<div class="card-body"> 
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Imagen
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Marca
                </th>
                <th>
                    Tamaño
                </th>
                <th>
                  Cantidad Platos
                </th>
                <th>
                    Cantidad piñones
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberDishes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberSprockets)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdBike">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdBike">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




